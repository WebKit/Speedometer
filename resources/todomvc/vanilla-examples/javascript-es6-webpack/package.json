{
    "name": "javascript-es6-webpack",
    "version": "1.0.0",
    "description": "TodoMVC app written with JavaScript es6 features.",
    "engines": {
        "node": ">=18.13.0",
        "npm": ">=8.19.3"
    },
    "private": true,
    "scripts": {
        "dev": "webpack serve --open --config ./standalone/webpack.dev.js",
        "dev:complex": "webpack serve:complex --open --config ./complex/webpack.dev.js --inline --hot",
        "build": "webpack --config ./standalone/webpack.prod.js",
        "build:complex": "webpack --config ./complex/webpack.prod.js",
        "serve": "http-server ./standalone/dist -p 7002 -c-1 --cors",
        "serve:complex": "http-server ./complex/dist -p 7002 -c-1 --cors"
    },
    "dependencies": {
        "big-dom-generator": "file:../../big-dom-generator",
        "todomvc-app-css": "^2.4.2",
        "todomvc-common": "^1.0.5"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.3",
        "css-minimizer-webpack-plugin": "^4.2.2",
        "html-webpack-plugin": "^5.5.0",
        "http-server": "^14.1.1",
        "mini-css-extract-plugin": "^2.7.2",
        "style-loader": "^3.3.1",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-merge": "^5.8.0"
    }
}
