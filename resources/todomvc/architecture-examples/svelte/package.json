{
    "name": "svelte",
    "version": "1.0.0",
    "description": "TodoMVC app written with Svelte.",
    "engines": {
        "node": ">=18.13.0",
        "npm": ">=8.19.3"
    },
    "private": true,
    "scripts": {
        "build": "rollup -c ./standalone/rollup.config.js",
        "build:complex": "rollup -c ./complex/rollup.config.js",
        "watch": "rollup -c ./standalone/rollup.config.js -w",
        "watch:complex": "rollup -c ./complex/rollup.config.js -w",
        "serve": "http-server ./standalone/dist -p 7002 -c-1 --cors",
        "serve:complex": "http-server ./complex/dist -p 7002 -c-1 --cors",
        "dev": "npm run serve & npm run watch",
        "dev:complex": "npm run serve:complex & npm run watch:complex"
    },
    "dependencies": {
        "big-dom-generator": "file:../../big-dom-generator",
        "todomvc-app-css": "^2.4.2",
        "todomvc-common": "^1.0.5"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.0.2",
        "http-server": "^14.1.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-filesize": "^10.0.0",
        "rollup-plugin-import-css": "^3.2.1",
        "rollup-plugin-svelte": "^7.1.4",
        "rollup-plugin-terser": "^7.0.2",
        "svelte": "^3.58.0"
    }
}
